@using Makalem.Controllers
@model Tuple<IEnumerable<Kategori>, IEnumerable<Makale>,IEnumerable<MakaleKategori>>

@{
    ViewData["Title"] = "Home Page";
}

<!-- Jumbotron Section Start -->
<section class="jumbotron">
    <div class="container">
        <!-- Row Start -->
        <div class="row">
            <div class="col-md-12 inner-contant" data-aos="zoom-in" data-aos-duration="500">
                <h1>Hello! we are YCNB</h1>
                <h3>Article System</h3>
                <p>Read & Write Articles... </p><br />

                @using (Html.BeginForm())
                {
                    <center>
                        <div class="col-sm-12">
                            <div id="custom-search-input">
                                <div class="input-group col-sm-12">
                                    <input type="text" class="form-control input-lg" placeholder="Makale Ara..." name="searchstring" />
                                    <span class="input-group-btn">
                                        <button class="btn btn-success btn-lg " type="submit">
                                            <i class="glyphicon glyphicon-search"></i>
                                        </button>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </center>
                    <br />
                }

            </div>
        </div>
        <!-- Row Ended -->
    </div>
</section>
<!-- Jumbotron Section Ended -->
<!-- Portfolio Section Start -->

<section class="portfolio">
    <!-- Container-fluid Start -->
    <div class="container-fluid">
        <div class="row" style="z-index: 999; position: relative; margin-top: -107px;padding-bottom: 60px;">
            <button class="active btn btn-default filter-button" data-filter="all">All</button>
            @foreach (var kategori in Model.Item1)
            {
                <button class="btn btn-default filter-button" data-filter=@kategori.Id>@kategori.Adi</button>
            }

        </div>

        <!-- Row Start -->
        <div class="row">
            <!-- Main_portfolio_content Start -->
            <div class="main_portfolio_content">
                @foreach (var makale in Model.Item2)
                {
                    @if(makale.DurumTipi  != false){
                  
                    <div class="gallery_product col-md-3 col-sm-4 col-xs-6 filter @(Model.Item3.FirstOrDefault(x=>x.MakaleId == makale.Id)).KategoriId  ">
                        <div>
                            <a asp-controller="Home" asp-action="ViewArticle" asp-route-id="@makale.Id">
                                <img src="~/images/portfolio/image-1.jpg" class="img-responsive" alt="image-1" />
                                <div class="portfolio_images_overlay text-center">
                                    <h6>
                                        <br>
                                        <span>
                                            @makale.Baslik - <i class="fa fa-comment" aria-hidden="true" style="color: white;"></i>
                                        </span>
                                    </h6>
                                </div>
                            </a>
                        </div>
                    </div>
                    }
                }
                <p style="font-size:40px; color:white; text-align:center;"><br /><br /> @ViewData["search"]<br /><br /></p>
            </div>
            <!-- Main_portfolio_content Ended -->
        </div>
        <!-- Row Ended -->
    </div>
    <!-- Container-fluid Ended -->
</section>
<!-- Portfolio Section Ended -->
